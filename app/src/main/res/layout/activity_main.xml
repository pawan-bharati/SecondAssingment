<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <Button
        android:id="@+id/btnadd"
        android:layout_width="126dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:text="ADDITION"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnarea"
        android:layout_width="136dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:text="CIRCLE AREA"
        app:layout_constraintEnd_toStartOf="@+id/btnreverseno"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toEndOf="@+id/btnadd"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnreverseno"
        android:layout_width="134dp"
        android:layout_height="58dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="24dp"
        android:text="REVERSE NUMBER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnadd"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnpalendrom"
        android:layout_width="122dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="PALINDROME"
        app:layout_constraintBottom_toTopOf="@+id/fragmentContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnadd"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/btnauto"
        android:layout_width="129dp"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:text="AUTOMORPHISM NUMBER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnarea" />

    <Button
        android:id="@+id/btnreversestring"
        android:layout_width="126dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:text="STRING REVERSE"
        app:layout_constraintBottom_toTopOf="@+id/fragmentContainer"
        app:layout_constraintEnd_toStartOf="@+id/btnauto"
        app:layout_constraintStart_toEndOf="@+id/btnpalendrom"
        app:layout_constraintTop_toBottomOf="@+id/btnreverseno"
        app:layout_constraintVertical_bias="0.011" />

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#ff0000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnauto" />

</androidx.constraintlayout.widget.ConstraintLayout>